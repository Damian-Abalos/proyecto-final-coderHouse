<!-- Header -->
<div class="d-flex justify-content-between bg-primary p-3">
    <div class="d-flex">
        <img class="bg-info mr-4" src="{{avatar}}" alt="usuario"
            style="width: 60px; height: 60px; border-radius: 50%" />
        <h1 style="color: rgb(255, 255, 255)" class="m-auto">Bienvenido {{nombre}} </h1>
    </div>
    <div class="btn-group align-items-center p-3">
        <a type="button" class="btn btn-info" href="/">Productos</a>
        <a type="button" class="btn btn-info" href="/cart"><i class="fas fa-shopping-cart"></i></a>

        <button type="button" class="btn btn-info dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown"
            aria-expanded="false">
            <span class="visually-hidden"></span>
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/infoUser">Info</a></li>
                <li><a class="dropdown-item" href="/chat">chat</a></li>
            <li><a class="dropdown-item" href="/fired">Desloguearse</a></li>
        </ul>
    </div>
</div>
<div id="misDatos">
    <div>
        <form id="Chat" onsubmit="SendMesage(); return false;" class="border border-primary p-3 mb-3 rounded jumbotron">
            <div hidden>
                <div class="mb-3 col-5">
                    <input type="email" id="mail" name="mail" class="form-control" value={{email}} />
                </div>
                <div class="mb-3 col-5">
                    <input type="text" id="nombre" name="nombre" class="form-control" value={{nombre}} />
                </div>
                <div class="mb-3 col-5">
                    <input type="text" id="direccion" name="direccion" class="form-control" value={{direccion}} />
                </div>
                <div class="mb-3 col-2">
                    <input type="text" id="edad" name="edad" class="form-control" value={{edad}} />
                </div>
                <div class="mb-3 col-4">
                    <input type="text" id="celular" name="celular" class="form-control" value={{celular}} />
                </div>
                <div class="mb-3 col-5">
                    <input type="text" id="avatar" name="avatar" class="form-control" value={{avatar}} />
                </div>

            </div>

            <h3>Conversacion:</h3>
            <div class="mb-3">
                <div id="tableMessages"></div>
            </div>

            <h3>Mensaje:</h3>
            <div class="row g-3 mb-3">
                <div class="col-10">
                    <input type="text" id="mensaje" name="mensaje" class="form-control" />
                </div>
                <div class="col-2">
                    <button type="submit" class="btn btn-primary">Enviar</button>
                </div>
            </div>
            <div class="mb-3">

            </div>
        </form>
    </div>
</div>
<script src="js/mainCli.js"></script>